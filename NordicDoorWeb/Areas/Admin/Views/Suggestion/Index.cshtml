@model IEnumerable<Suggestion>
@{
    ViewData["Title"] = "Index";
}


<div class="container p-3">
    <div class="row pt-4">   
        <div class="col-6">
            <h2 class="text-primary">Suggestion List</h2>
        </div>
        <div class="col-6 text-end">
        <a asp-controller="Suggestion" asp-action="Create" class="btn btn-primary">
                <i class="bi bi-plus-circle"></i> &nbsp; Create New Suggestion
        </a>
        </div>
    </div>
    <br />

<table class="table table-bordered table-striped" style="width:100%">
    <thead>
        <tr>
            <th>
                Name
            </th>
            <th>
                SuggestionId
            </th>
            <th>
                Title
            </th>
            <th>
                Description 
            </th>
            <th>
                Date
            </th>
            <th></th>
            @*<th>
                Deadline
            </th>*@
        </tr>
    </thead>
    <tbody>
        @foreach(var obj in Model)
        {
                <tr>
                <td width="10%">
                    @obj.Name
                </td>
                <td width="10%">
                    @obj.Id
                </td>
                <td width="30%">
                    @obj.Title
                </td>
                <td width="20%">
                    @obj.Description
                </td>
                <td width="20%">
                    @obj.CreateDateTime
                </td>
                @*<td width="20%">
                    @obj.Deadline
                </td>*@
                <td>
                    <div class="w-75 btn-group" role="group">
                            <a asp-controller="Suggestion" asp-action="Edit" asp-route-id="@obj.Id"
                             class="btn btn-primary mx-2">  <i class="bi bi-pencil-square"></i> Edit</a>
                            <a asp-controller="Suggestion" asp-action="Delete" asp-route-id="@obj.Id"
                            class="btn btn-danger mx-2"> <i class="bi bi-trash3-fill"></i> Delete</a>
                    </div>
                </td>
                </tr>
        }
    </tbody>

</table>
</div>